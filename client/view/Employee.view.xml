<mvc:View
	controllerName="tms.basic.controller.Employee"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.uxap"
  xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true"
	xmlns:m="sap.m">
  <ObjectPageLayout
    id="employee"
    useIconTabBar="true"
    showHeaderContent="true"
    showTitleInHeaderContent="true">
    <headerTitle>
      <ObjectPageHeader objectTitle="{number}" isObjectTitleAlwaysVisible="false" >
        <actions>
					<ObjectPageHeaderActionButton icon="sap-icon://account" enabled="false"/>
        </actions>
        <breadcrumbs>
          <m:Breadcrumbs currentLocationText="{i18n>employee}">
						<m:Link text="{i18n>home}" href="#"/>
						<m:Link text="{i18n>employees}" href="#/employees"/>
					</m:Breadcrumbs>
        </breadcrumbs>
        
      </ObjectPageHeader>
    </headerTitle>
    
    <sections>
      <ObjectPageSection title="{i18n>common}">
        <subSections>
          <ObjectPageSubSection title="{i18n>common}">
            <blocks>
              <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout">
                <f:content>
                  <m:Label text="{i18n>firstName}"/>
                  <m:Input value="{firstName}"/>
                  <m:Label text="{i18n>lastName}"/>
                  <m:Input value="{lastName}"/>
                </f:content>
              </f:SimpleForm>
            </blocks>
          </ObjectPageSubSection>
        </subSections>
      </ObjectPageSection>
    </sections>
  </ObjectPageLayout>
</mvc:View>
