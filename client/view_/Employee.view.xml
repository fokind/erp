<mvc:View
	controllerName="tms.basic.controller.Employee"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.uxap"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true"
	xmlns:m="sap.m"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
  <ObjectPageLayout useIconTabBar="true">
    <headerTitle>
      <ObjectPageHeader objectTitle="{Instance>/id}" markChanges="{Instance>/edit}">
        <actions>
          <ObjectPageHeaderActionButton icon="sap-icon://edit" visible="{= !${Instance>/edit}}" press="onEditActionPress"/>
					<ObjectPageHeaderActionButton icon="sap-icon://accept" type="Accept" visible="{Instance>/edit}" press="onSaveActionPress"/>
					<ObjectPageHeaderActionButton icon="sap-icon://decline" type="Reject" visible="{Instance>/edit}" press="onCancelActionPress"/>
        </actions>
        <breadcrumbs>
          <m:Breadcrumbs currentLocationText="{i18n>employee}">
						<m:Link text="{i18n>home}" href="#"/>
						<m:Link text="{i18n>employees}" href="#/employees"/>
					</m:Breadcrumbs>
        </breadcrumbs>
      </ObjectPageHeader>
    </headerTitle>
    <sections>
      <ObjectPageSection showTitle="false">
        <subSections>
          <ObjectPageSubSection>
            <blocks>
              <f:SimpleForm editable="true" layout="ResponsiveGridLayout ">
                <f:content>
                  <m:Label text="{i18n>employeeName}"/>
                  <m:Input editable="{Instance>/edit}" value="{Instance>/name}"/>
                  <m:Label text="{i18n>username}"/>
                  <m:Input editable="{Instance>/edit}" value="{Instance>/username}"/>
                  <m:Label text="{i18n>email}"/>
                  <m:Input editable="{Instance>/edit}" value="{Instance>/email}"/>
                </f:content>
              </f:SimpleForm>
            </blocks>
          </ObjectPageSubSection>
        </subSections>
      </ObjectPageSection>
    </sections>
  </ObjectPageLayout>
</mvc:View>