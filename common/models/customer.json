{
  "name": "Customer",
  "forceId": true,
  "strict": true,
  "properties": {
    "name": "string",
    "edit": "boolean",
    "deleted": "boolean",
    "managerId": "string"
  },
  "relations": {
    "manager": {
      "type": "belongsTo",
      "model": "Employee",
      "foreignKey": "managerId"
    }
  },
  "acls": [
    {
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "$authenticated"
    }
  ]
}