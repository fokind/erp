{
  "name": "Employee",
  "forceId": true,
  "strict": true,
  "base": "User",
  "properties": {
    "name": "string",
    "edit": "boolean",
    "deleted": "boolean",
    "departmentId": "string"
  },
  "relations": {
    "department": {
      "type": "belongsTo",
      "model": "Department",
      "foreignKey": "departmentId"
    }
  },
  "acls": [
    {
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "$authenticated"
    }
  ]
}