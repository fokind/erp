{
  "name": "SalesOrder",
  "forceId": true,
  "strict": true,
  "properties": {
    "creationDate": "date",
    "total": "number",
    "edit": "boolean",
    "deleted": "boolean",
    "managerId": "string",
    "customerId": "string"
  },
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "customerId"
    },
    "manager": {
      "type": "belongsTo",
      "model": "Employee",
      "foreignKey": "managerId"
    },
    "Rows": {
      "type": "hasMany",
      "model": "SalesOrderRow",
      "foreignKey": "parentId"
    }
  },
  "acls": [
    {
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "$authenticated"
    }
  ]
}